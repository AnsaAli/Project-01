<%- include('../layout/header.ejs') %>

    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="tab-content dashboard-content ">
                        <div class="mt-5 d-flex">
                            <button class="btn btn-success ml-3 m-3" onclick="printPage()" style="background-color: rgb(255, 255, 255); color: black;">Print</button>
                            <form action="/invoiceDownload" method="get">
                                <button class="btn btn-success ml-3 m-3"  style="background-color: rgb(255, 255, 255); color: black;">Download
                                    Invoice</button>
                            </form>
                         
                        </div>
                        
                        <div class="card">
                            <div class="card-header" style="text-align: center;">
                                <h5 class="mb-0"> Order Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Order No:</th>
                                                <th>Date</th>
                                                <th>Product Details</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td> <%= orderPlaced.order_id %></td> 
                                                <td> <%= orderPlaced.orderDate.toDateString() %> </td>
                                                <td> 
                                                    <% orderPlaced.orderItems.forEach(orderItem=> { %>
                                                        <% if (orderItem.orderedWeight) { %>
                                                            <% orderItem.orderedWeight.forEach(pdt=> { %>
                                                                <%= pdt.name %>:
                                                                    <% if (pdt.weight>= 1000) { %>
                                                                        <%= Math.floor(pdt.weight / 1000) %>
                                                                            kg
                                                                            <% let remainingGrams=pdt.weight
                                                                                % 1000; %>
                                                                                <% if (remainingGrams> 0) {
                                                                                    %>
                                                                                    <%= remainingGrams %>g
                                                                                        <% } %><br>
                                                                                            <% } else { %>
                                                                                                <%= pdt.weight
                                                                                                    %>g <br>
                                                                                                    <% } %>

                                                                                                        <% });
                                                                                                            %>
                                                                                                            <% }
                                                                                                                %>
                                                                                                                <% });
                                                                                                                    %>

                                                </td>
                                                <td>
                                                    â‚¹<%= orderPlaced.finalPrice %> 
                                                </td>
                                                <td>
                                                    <%= orderPlaced.orderStatus %>
                                                </td>
                                                <td>
                                                    <%= orderPlaced.shippingAddress.address_customer_name %> <br>
                                                    <%= orderPlaced.shippingAddress.mobile_num %> <br>
                                                        <%= orderPlaced.shippingAddress.apartment_name %> <br>
                                                            <%= orderPlaced.shippingAddress.city %>

                                                </td>
                                            </tr>

                                        </tbody>

                                    </table>
                                </div>
                                <!-- Pagination -->

                                <!-- End Pagination -->
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <script>
            function printPage() {
                window.print();
            }
        </script>

    </section>