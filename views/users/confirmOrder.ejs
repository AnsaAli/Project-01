<%- include('../layout/header.ejs') %>
<body>
    
        <div class="container">
           
            <div class="blur-background">
                <div class="success">
                    <h3>Order confirmed <p><a href="/order">View Order Details</a></p></h3>  
                    <form action="/home" class="form-group mt-15">
                        <button class="btn btn-fill-out btn-block hover-up">Continue Shopping</button>
                    </form>
                </div>
            </div>
        </div>
   

        <style>
            .container {
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
            }
    
            .blur-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                backdrop-filter: blur(5px);
                display: flex;
                justify-content: center;
                align-items: center;
            }
    
            .success {
                background-color: rgba(0, 0, 0, 0.8); 
                padding: 20px;
                border-radius: 10px;
                color: antiquewhite;
                text-align: center;
                max-width: 50%; 
                width: 100%;
            }
    
            .success h3 {
                color: white;
            }
        </style>
</body>


 