<%- include('../layout/header.ejs') %>

    <head>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    </head>

    <body>



        <div class="blur-background" style="margin-top: 150px; ">
            <div class="success">
                <h3>Order confirmed </h3>
                <div class="lottie-container">
                    <lottie-player src="https://lottie.host/8e11a55b-1c52-44a2-973f-a2754744e99d/ZVWSiav8pf.json"
                        background="##2ecc71" speed="1" style="width: 250px; height: 250px;"  autoplay direction="1"
                        mode="normal"></lottie-player>

                </div>

                <p>
                    <a href="/order" style="text-decoration: none; color: black; font-weight: bold;">View Order
                        Details</a>
                </p>

                <form action="/home" class="form-group mt-15">
                    <button class="btn btn-fill-out btn-block hover-up"
                        style="background-color: rgb(8, 126, 103); color: azure; font-size: larger;">Continue
                        Shopping</button>
                </form>
            </div>
        </div>



        <style>
            .lottie-container {
                display: flex;
                justify-content: center;
                align-items: center;
                margin: 20px 0;
             
            }

            .blur-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                backdrop-filter: blur(5px);
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .success {
                background-color: rgba(228, 206, 2, 0.8);
                padding: 50px;
                border-radius: 20px;
                color: antiquewhite;
                text-align: center;
                max-width: 50%;
                width: 100%;
                box-shadow: rgb(0, 94, 94);
            }

            .success h3 {
                color: rgb(0, 0, 0);
                font-size: xX-large;
            }
        </style>
    </body>