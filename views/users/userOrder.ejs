        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>

    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-md-3"  >

                            <div class="dashboard-menu">
                                <ul class="nav flex-column " role="tablist">
                                    <li class="nav-item">
                                        <form action="/myProfile" method="GET">
                                            <button type="submit" 
