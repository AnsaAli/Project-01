<%- include('../layout/header.ejs') %>


<body>
    <div class="container col-lg-6" style="margin-top: 50px; margin-bottom: 50px;">
        <div class="login_wrap widget-taber-content p-30 background-white border-radius-5" style="background-color: rgb(255, 255, 255);">
           <div style="background-color: rgb(255, 255, 255);">
                <div class="heading_s1">
                   <h3 class="mb-30" style="text-align: center;">Resend OTP</h3>
                </div>
                <form action="/resendOtp" method="POST">
                    <%
                    if(typeof successMessage !='undefined'){
              %>
                      <p style="color: green; font-size: small;"><%= successMessage %></p>
              <%
                        } 
              %>
              <%
                       if(typeof errorMessage !='undefined'){
              %>
                       <p style="color: red;"><%= errorMessage %></p>
              <%
                         } 
              %>
                        <div class="form-group login_page"> 
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                            <input type="submit" class="btn btn-fill-out btn-block hover-up" style="background-color: rgb(1, 67, 63); color: rgb(255, 255, 255);" value="Send OTP">
                    </div>
                </form>
                   
                
            </div>
        </div>
    </div>   
</body>
<%- include('../layout/footer.ejs') %> 