        <script>
            function validateNumber(input) {
                const number = input.value.trim();
                const validationMessage = document.getElementById('numberValidation');
                const numberRegex = /^[0-9]{10}$/;
        
                if (number === "") {
                    validationMessage.textContent = 'Contact number is required.';
                    validationMessage.style.color = 'red';
                    return false;
                } else if (!numberRegex.test(number)) {
                    validationMessage.textContent = 'Please enter a valid 10-digit contact number.';
                    validationMessage.style.color = 'red';
                    return false;
                }
        
                validationMessage.textContent = '';
                return true;
            }
            
            function validateName(input) {
                const name = input.value.trim();
                const validationMessage = document.getElementById('nameValidation');
               
        
                if (name === "") {
                    validationMessage.textContent = 'Name is required.';
                    validationMessage.style.color = 'red';
                    return false;
                } else if(name.length < 2){
                    validationMessage.textContent = 'Name must be minimum of 3 letters.';
                    validationMessage.style.color = 'red';
                    return false;
                }
        
                validationMessage.textContent = '';
                return true;
            }
        
        
            document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('updateForm').addEventListener('submit', function (event) {
                    if (!validateNumber(document.querySelector('input[name="mobile_num"]'))) {
                        event.preventDefault();
                    }
                    if (!validateName(document.querySelector('input[name="address_customer_name"]'))) {
                        event.preventDefault();
                    }
                });
            });
        </script>


