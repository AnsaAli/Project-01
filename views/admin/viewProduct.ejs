    <div class="row pdt-view-card">
      <% products.forEach(product => { %>
          <div class="col-md-3 col-sm-4 mb-3 ml-5"> 
              <div class="card">
                  <% if (product.image.length > 0) { %>
                     
                      <div class="card-img-top" style="height: 200px; overflow: hidden;">
                         
                          <img src="/images/<%= product.image[0] %>" class="img-fluid mx-auto d-block" alt="Product Image" style="height: 100%; width: auto;">
                      </div>
                  <% } %>
                  <div class="card-body" style="height: 150px;">
                      <h5 class="card-title"><%= product.name %></h5>
                      <p class="card-text">Price: <%= product.price %></p>
                  </div>
                  <div class="card-footer">
                      <form action="/admin/editProduct" method="GET">
                          <input type="hidden" name="_id" value="<%= product._id %>">
                          <button type="submit" class="btn btn-primary">View/Edit</button>
                      </form>
                      <form action="/admin/viewProducts/<%= product._id %>/deleteProduct" method="post">
                          <input type="hidden" name="_id" value="<%= product._id %>">
                          <button type="submit" class="btn btn-primary">Delete</button>
                      </form>
                  </div>
              </div>
          </div>
      <% }); %>
