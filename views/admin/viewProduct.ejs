    <div class="panel-header panel-header-sm">
    </div>
    <div class="row pdt-view-card  mt-5 mb-5">
      <% products.forEach(product => { %>
          <div class="col-md-3 col-sm-4 mb-3 ml-5"> 
              <div class="card">
                      <div class="card-img-top" style="height: 200px; overflow: hidden;">
                        <img src="/images/<%= product.images[0] %>" class="img-fluid mx-auto d-block" alt="Product Image" style="width:100%">
                      </div>
                  <div class="card-body" style="height: 150px;">
                      <h5 class="card-title"><%= product.name %></h5>
                      <p class="card-text">Price per 250g(₹): <%= product.price %></p>
                      <p class="card-text">Quantity(in 250g): <%= product.quantity %></p>
                      <p class="card-text">Total(₹)</p>
                  </div>
                  <div class="card-footer">
                      <form action="/admin/editProduct" method="GET" class="mb-3">
                          <input type="hidden" name="_id" value="<%= product._id %>">
                          <button type="submit" class="btn btn-primary">View/Edit</button>
                      </form>
                      <form action="/admin/viewProducts/<%= product._id %>/deleteProduct" method="post">
                          <input type="hidden" name="_id" value="<%= product._id %>">
                          <button type="submit" class="btn btn-primary">Delete</button>
                      </form>
                  </div>
              </div>
          </div>
      <% }); %>
  </div> 

