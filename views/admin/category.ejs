<%- include('../layout/adminHeader.ejs') %>


  <div class="content">
    <div class="row">
      <div class="col-md-12">
      
        <div class="card">
          <div class="card-header">
            <h4 class="card-title"> Category List</h4>
            <form action="/admin/category" method="GET" class="mb-3">
              <div class="row ">
                <div class="col-md-5">
                  <label for="searchQuery"></label>
                  <input type="text" class="form-control" id="searchQuery" name="searchQuery"
                    placeholder="Search ">
                </div>
                <div class="col-md-1">
                  <button type="submit" class="btn btn-primary" style="border-radius: 10px; margin-left: 0px;"><i
                      class="fa fa-search"></i></button>
                </div>
              </div>
             
            </form>
           
          </div>
          <div class="card-header">
            <h6 class="card-title"> <a href="/admin/addCategory">Add Category</a></h6>
          </div>
          <div class="card-body">
          
            <div class="table-responsive">
              <table class="table">
                <% if(typeof successMessage !='undefined' ){ %>
                  <p style="color: green;">
                      <%= successMessage %>
                  </p>
                  <% } %>
                      <% if(typeof errorMessage !='undefined' ){ %>
                          <p style="color: red;">
                              <%= errorMessage %>
                          </p>
                          <% } %>
              
                <thead class=" text-primary">
                  <th>
                    ID
                  </th>

                  <th>
                    Category Name
                  </th>
                  <th>
                    Description
                  </th>
                  <th>
                    Action
                  </th>
                </thead>
                <tbody>
                  <% categories.forEach(category=> { %>
                    <tr>
                      <td>
                        <%= category._id %>
                      </td>

                      <td>
                        <%= category.name %>
                      </td>
                      <td>
                        <%= category.description %>
                      </td>
                      <td>
                        <button class="btn btn-fill-out btn-block hover-up mb-2" style="background-color: rgb(8, 205, 37);"><a
                            href="/admin/editCategory?_id=<%= category._id %> "  class="btnCate" >Edit</a></button>
                            <form action="/admin/category/<%= category._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
                              <button type="submit" class="btn btn-fill-out btn-block hover-up" style="background-color: rgb(244, 15, 15);">Delete</button>
                            </form>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>    
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>

  </div>
  </div>


  <style>
    .card{
      margin-top: 100px;
    }
    .btnCate {
      text-decoration: none;
      color: rgb(255, 255, 255);
    }
  </style>

<%- include('../layout/adminfooter.ejs') %>
 