<%- include('../layout/adminHeader.ejs') %>
<body>
    <div class="content">
        <div class="row">
            <% if (orderPlaced.length > 0) { %> <!-- Ensure this condition checks the correct variable -->
                <div class="col-md-12">
                    <div class="card p-5">
                        <form action="" style="margin-top: 10px;">
                            <label for="from" style="color: black; font-weight: bold; margin: 5px; ">From</label>
                            <input type="date" name="from" style="background-color: rgb(255, 255, 255); color: rgb(0, 0, 0);" id="fromDate">
                
                            <label for="to" style="color: black; font-weight: bold; margin: 5px;">To</label>
                            <input type="date" name="to" style="background-color: rgb(255, 255, 255); color: rgb(0, 0, 0);" id="toDate">
                
                            <input type="submit" value="Filter" style="background-color:rgb(255, 255, 255); color: black; border-radius: 5px; padding: 2px; font-size: small;">
                          </form>
                
                          <div class="sales-report-form">
                            <form action="/admin/dailyReport" method="post">
                              <label for="daily" style="color: black; font-weight: bold; margin: 5px;">Daily sales</label>
                              <input type="date" name="daily" id="daily">
                              <button class="sales-report-button" type="submit" style="margin: 5px; background-color:rgb(255, 255, 255); color: black; border-radius: 5px; padding: 2px; font-size: small;">View</button>
                            </form>
                          </div>
                
                          <div class="sales-report-form">
                            <form action="/admin/monthlyReport" method="post">
                              <label for="monthly" style="color: black; font-weight: bold; margin: 5px;">Monthly sales</label>
                              <input type="month" name="month" id="month">
                              <button class="sales-report-button" type="submit" style="margin: 5px; background-color:rgb(255, 255, 255); color: black; border-radius: 5px; padding: 2px; font-size: small;">View</button>
                            </form>
                          </div>
                
                          <div class="sales-report-form">
                            <form action="/admin/yearlyReport" method="post">
                              <label for="yearly" style="color: black; font-weight: bold; margin: 5px;">Yearly sales</label>
                              <input type="number" name="yearly" id="yearly" min="2022" max="2024" value="2023">
                              <button class="sales-report-button" type="submit" style="margin: 5px; background-color:rgb(255, 255, 255); color: black; border-radius: 5px; padding: 2px; font-size: small;">View</button>
                            </form>
                          </div>
                
                          <form action="/admin/sales/download" method="get">
                            <button style="background-color: rgb(15, 191, 182);border-radius: 5px; color: rgb(255, 255, 255); margin-top: 8px;">Download</button>
                          </form>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Sales Reports</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table" id="orderTable">
                                    <thead class="text-primary" style="font-size: small;">
                                        <th>Date</th>
                                        <th>Name</th>
                                        <th>Products</th>
                                        <th>Payment <br> Method</th>
                                        <th>Total Bill</th>
                                        <th>Status</th>
                                    </thead>
                                    <tbody>
                                        <% orderPlaced.forEach(order => { %>
                                            <tr>
                                                <td><%= order.orderDate.toDateString().substring(0, 10) %></td>
                                                <td><%= order.shippingAddress.address_customer_name %></td>
                                                <td>
                                                    <% order.orderItems.forEach(orderItem => { %>
                                                        <% if (orderItem.orderedWeight) { %>
                                                            <% orderItem.orderedWeight.forEach(pdt => { %>
                                                                <%= pdt.name %>: 
                                                                <% if (pdt.weight >= 1000) { %>
                                                                    <%= Math.floor(pdt.weight / 1000) %>kg
                                                                    <% let remainingGrams = pdt.weight % 1000; %>
                                                                    <% if (remainingGrams > 0) { %>
                                                                        <%= remainingGrams %>g
                                                                    <% } %><br>
                                                                <% } else { %>
                                                                    <%= pdt.weight %>g <br>
                                                                <% } %>
                                                            <% }); %>
                                                        <% } %>
                                                    <% }); %>
                                                </td>
                                                <td><%= order.user_id.email %></td>
                                                <td><%= order.paymentMethod %></td>
                                                <td id="orderStatus_<%= order._id %>"><%= order.orderStatus %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                    <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                          // Get the current date in the format "YYYY-MM-DD"
                                          var currentDate = new Date().toISOString().split('T')[0];
        
                                          // Set the max attribute for the "From" input to prevent future dates
                                          var fromDateInput = document.getElementById('fromDate');
                                          if (fromDateInput) {
                                            fromDateInput.max = currentDate;
                                          } else {
                                            console.error('Element with id "fromDate" not found.');
                                          }
        
                                          // Set the max attribute for the "To" input to prevent future dates
                                          var toDateInput = document.getElementById('toDate');
                                          if (toDateInput) {
                                            toDateInput.max = currentDate;
                                          } else {
                                            console.error('Element with id "toDate" not found.');
                                          }
        
                                          toDateInput.addEventListener('change', function () {
                                            if (fromDateInput.value > toDateInput.value) {
                                              alert('To date cannot be earlier than From date. Please select a valid range.');
                                              toDateInput.value = fromDateInput.value;
                                            }
                                          });
                                        });
                                      </script>
                                </table>
                            </div>
                            <nav aria-label="navigation">
                                <ul class="pagination justify-content-end mt-50">
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>"
                                                style="display: flex; align-items: center; justify-content: center; width: 40px; height: 40px; 
                                                background-color:#563f03; color: #fff; text-align: center; margin: 5px; border-radius: 5px; 
                                                cursor: pointer; text-decoration: none;">
                                                Prev
                                            </a>
                                        </li>
                                    <% } %>
                                    <% for (let j = 1; j <= totalPages; j++) { %>
                                        <li class="page-item <% if (j === currentPage) { %>active<% } %>">
                                            <a class="page-link" href="?page=<%= j %>"
                                                style="display: flex; align-items: center; justify-content: center; width: 40px; height: 40px; 
                                                background-color:#563f03; color: #fff; text-align: center; margin: 5px; border-radius: 5px;
                                                cursor: pointer; text-decoration: none;">
                                                <%= j %>
                                            </a>
                                        </li>
                                    <% } %>
                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>"
                                                style="display: flex; align-items: center; justify-content: center; width: 40px; height: 40px; 
                                                background-color:#563f03; color: #fff; text-align: center; margin: 5px; border-radius: 5px; 
                                                cursor: pointer; text-decoration: none;">
                                                Next
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                <% } else { %>
                    <div class="container p-5">
                        <h2>No Sales Yet!</h2>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('in addEventListener===========')
            var currentDate = new Date().toISOString().split('T')[0];

            var fromDateInput = document.getElementById('fromDate');
            if (fromDateInput) {
                fromDateInput.max = currentDate;
            } else {
                console.error('Element with id "fromDate" not found.');
            }

            var toDateInput = document.getElementById('toDate');
            if (toDateInput) {
                toDateInput.max = currentDate;
            } else {
                console.error('Element with id "toDate" not found.');
            }

            toDateInput.addEventListener('change', function () {
                if (fromDateInput.value > toDateInput.value) {
                    alert('To date cannot be earlier than From date. Please select a valid range.');
                    toDateInput.value = fromDateInput.value;
                }
            });
        });
    </script>
</body>

    