                    <div class="form-group">
                      <label for="price">Price:</label>
                      <input type="number" id="price" name="price"  class="form-control" required><br>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 pr-1">
                    <div class="form-group">
                    <label for="description">Description:</label><br>
                     <textarea id="description" name="description"  rows="4" cols="80" class="form-control" required></textarea><br>
                    </div>
                  </div>
                </div>
               
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      
                      <button type="submit"  class="btn btn-success btn-fill-out btn-block hover-up" style="color: rgb(255, 255, 255); font-weight: bold;">Add Product</button>
                      <button type="submit" class="btn btn-primary btn-fill-out btn-block hover-up"><a href="/admin/viewProducts" style="color: rgb(255, 255, 255); font-weight: bold;">Cancel</a></button>

                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>


    <script>
         async function previewAndCropImages(event) {
        const preview = document.getElementById('imagePreview');
        preview.innerHTML = ''; //else the new images would be appended to the existing ones. 

        const files = event.target.files; // Get selected files

        for (let i = 0; i < files.length; i++) {
            const file = files[i];
            const reader = new FileReader();

            reader.onload = async function(e) {
                const img = document.createElement('img');
                img.src = e.target.result;
                img.classList.add('preview-image');
                img.setAttribute('name', 'image'); // Set name attribute
                preview.appendChild(img);

                // Crop the image
                const croppedImageDataUrl = await cropImage(e.target.result, 50, 50); 
                console.log('Cropped image:', croppedImageDataUrl);
            };

            reader.readAsDataURL(file);
        }
    }
    </script>
    
    <style>
       .preview-image {
        width: 100px; 
        height: auto; 
        margin-right: 10px; 
