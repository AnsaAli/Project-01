                  <div class="col-md-5 pr-1">
                    <div class="form-group">
                        <label for="name">Product Name</label>
                        <input type="text"  class="form-control" id="name" name="name" required>
                    </div>
                  </div>
                  <div class="col-md-5 pr-1">
                    <div class="form-group">
                        <label for="category">Choose Category </label>
                        <!-- <input type="text"  class="form-control" id="name" name="name" required> -->
                        <select class="form-control" name="category" id="category">
                          <% categories.forEach(category=>{%>
                            <option value="<%= category._id %>"> <%= category.name%></option>
                           
                            <%} )%>
                        </select>
                        
                    </div>
                  </div>

                </div>
                 <!-- Product description -->
                <div class="row">
                  <div class="col-md-6 pr-1">
                    <div class="form-group">
                      <label for="description">Description</label>
                        <textarea name="description" rows="4" cols="80" class="form-control" id="description" required></textarea>
                    </div>
                  </div>
                </div>
                 <!-- Product Quantity  -->
                <div class="row">
                  <div class="col-md-6 pr-1">
                    <div class="form-group">
                        <label for="quantity">Stock/Quantity</label>
                        <input type="number"  class="form-control" placeholder="in gram" id="quantity" name="quantity" required>
                    </div>
                  </div>
                </div>
                 <!-- Product Price -->
                 <div class="row">
                  <div class="col-md-6 pr-1">
                    <div class="form-group">
                        <label for="price">Price (₹)</label>
                        <input type="number"  class="form-control" id="price" placeholder="per 100g"  name="price" required>
                        <!-- <select name="price" id="price"  required>
                          <option type="number" value="g"></option>
                          <option type="number" value="Kg"></option>
                        </select> -->
                    </div>
                  </div>
                </div>

                <!-- Total Price -->
                <div class="row">
                  <div class="col-md-6 pr-1">
                      <div class="form-group">
                          <label for="total">Total Price (₹)</label>
                          <input type="text" class="form-control" id="total" name="total_price" readonly>
                          
                      </div>
                  </div>
                 </div>
                    <!-- Offer Percentage -->
                   <div class="row">
                  <div class="col-md-6 pr-1">
                     <div class="form-group">
                        <label for="offerPercentage">Offer Percentage (%)</label>
                        <input type="number" class="form-control" id="offerPercentage" value="0" min="0" max="100">
                      </div>
                  </div>
                      </div>
             <!-- Offer Price -->
                <div class="row">
                <div class="col-md-6 pr-1">
                  <div class="form-group">
                     <label for="offerPrice">Offer Price (₹)</label>
                     <input type="text" class="form-control" id="offerPrice" name="offer_price" readonly>
                     <button type="button" class="btn btn-fill-out btn-block hover-up" onclick="calculateTotal()">Calculate Total</button>
                  </div>
                </div>

                </div>
              
                <div class="row">
