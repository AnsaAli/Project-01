<%- include('../layout/adminHeader.ejs') %>

    <body>



        <div class="containerProduct">
            <div class="product-details">
                <div class="m-5">
                    <h3><strong>Product Details:</strong></h3>
                    <% orderDetails.orderItems.forEach(orderItem=> { %>
                        <p>Order Id: <strong> <%= orderDetails.order_id %></strong>
                        </p>
                        <% if (orderItem.orderedWeight) { %>
                            <% orderItem.orderedWeight.forEach(pdt=> { %>
                                <%= pdt.name %>:
                                    <% if (pdt.weight>= 1000) { %>
                                        <%= Math.floor(pdt.weight / 1000) %>kg
                                            <% let remainingGrams=pdt.weight % 1000; %>
                                                <% if (remainingGrams> 0) { %>
                                                    <%= remainingGrams %>g
                                                        <% } %><br>
                                                            <% } else { %>
                                                                <%= pdt.weight %>g <br>
                                                                    <% } %>
                                                                        <% }); %>
                                                                            <% } %>
                                                                                <% }); %>
                </div>

                <div class="m-5">
                    <h5><strong>Account Holder Details:</strong></h5>
                    <p>Name: <%= orderDetails.user_id.name %>
                    </p>
                    <p>Email: <%= orderDetails.user_id.email %>
                    </p>
                </div>

               
            </div>
        </div>



        <style>
            .containerProduct {
                max-width: 900px;
                margin: 30px auto;
                background-color: #fff;
                padding: 30px;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .cartAndWish .button-form {
                display: inline-block;
                margin-right: 10px;
            }

            .product-images img {
                max-width: 250px;
                transition: transform 0.3s ease;

            }

            .product-images img:hover {
                transform: scale(1.4);
            }


            .product-name {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .product-description {
                margin-bottom: 20px;
            }


            .quantity-selector {
                margin-bottom: 20px;
            }



            /* Responsive CSS */
            @media screen and (max-width: 768px) {
                .container {
                    padding: 10px;
                }

                .product-image img {
                    width: 100%;
                }
            }

            @media screen and (max-width: 480px) {
                .product-name {
                    font-size: 20px;
                }


            }
        </style>

        <script>
            function confirmDelete() {
                if (confirm("Are you sure you want to delete this product?")) {
                    document.getElementById('deleteForm').submit();
                }
            }
        </script>

    </body>